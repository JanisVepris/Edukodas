<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}{{ "PlsAtsiminkPakeist" }}{% endblock %}</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}">
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    {% block stylesheets %}
        {% stylesheets
        "bundles/edukodastemplate/sass/materialize.scss"
        "bundles/edukodastemplate/sass/main.scss"
        filter="scssphp" output="css/app.css" %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}
    {% block canonical_meta %}{% endblock %}
</head>
<body>
{% block header %}
    {% include 'EdukodasTemplateBundle:inc:header.html.twig' %}
{% endblock %}

{# Pranesimai #}
<div class="container">
    {# Error #}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="card-panel red lighten-2">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {# Notice #}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="card-panel yellow lighten-2">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {# success #}
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="card-panel green lighten-2">
            {{ flashMessage }}
        </div>
    {% endfor %}
</div>

{# O kodėl main blokas neįeina į div.container? #}
{% block main %}{% endblock %}

{% javascripts filter='?yui_js'
'bundles/edukodastemplate/js/jquery-2.2.4.min.js'
'bundles/edukodastemplate/js/bin/materialize.js'
'bundles/edukodastemplate/js/jquery.form.js'
'bundles/fosjsrouting/js/router.js'
'js/fos_js_routes.js'
'bundles/edukodastemplate/js/teacher-profile-script.js'
output='js/compiled/app.js' %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}

</body>
</html>
