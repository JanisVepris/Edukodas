<div id="manage-points-modal" class="modal valign-wrapper">
    <div class="modal-content">
        <div class="task-list-container">
            {% for course in courses %}
                <ul class="collection with-header striped">
                    <li class="collection-header">
                        <h5>
                            {{ course.name }}
                        </h5>
                    </li>
                    {% for task in course.tasks %}
                        <li data-task-id="{{ task.id }}" data-task-amount="{{ task.points }}" class="collection-item points-task-select-button" >
                            {{ task.name }}
                        </li>
                    {% else %}
                    {% endfor %}
                </ul>
            {% else %}
            {% endfor %}
        </div>
        <div class="hide" id="add-points-form-container">
            {{ form_start(form, {'attr': {'id': 'add-points-form'}}) }}
                {{ form_label(form.student) }}
                {{ form_widget(form.student) }}
                {{ form_label(form.amount) }}
                {{ form_widget(form.amount) }}
                {{ form_label(form.comment) }}
                {{ form_widget(form.comment) }}
                {{ form_widget(form._token) }}
                {{ form_widget(form.task, {'attr': {'class': 'hide'}}) }}
                {% do form.teacher.setRendered %}
            <button type="submit" class="waves-effect waves-light btn" id="add-points-submit">{{ 'form.add_points.submit'|trans }}</button>
            <div class="preloader-wrapper small active hide" id="points-submit-preloader">
                <div class="spinner-layer spinner-green-only">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div><div class="gap-patch">
                        <div class="circle"></div>
                    </div><div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <a class="waves-effect waves-light btn right" id="add-points-form-back">{{ 'form.add_points.back'|trans }}</a>
            {{ form_end(form) }}
        </div>
        <div class="center-align hide" id="points-form-preloader">
            <div class="preloader-wrapper big active">
                <div class="spinner-layer spinner-blue-only">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div><div class="gap-patch">
                        <div class="circle"></div>
                    </div><div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
